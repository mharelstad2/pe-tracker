<!DOCTYPE html>
<html lang="en">
  <head>
    <title>PE Tracker</title>
    <meta charset="UTF-8">
    <style>
      /* Added CSS styles here */
      body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
      }

      h1 {
        color: #333;
      }

      button {
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        cursor: pointer;
        margin: 5px;
      }

      button:hover {
        background-color: #0056b3;
      }

      button#praiseButton {
        background-color: #4caf50;
      }

      button#criticizeButton {
        background-color: #ff5722;
      }

      #output {
        margin: 10px;
      }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  </head>
  <body>
    <h1>Hello World!</h1>
    <% if (buttons && buttons.length > 0) { %>
      <% buttons.forEach(function(b) { %>
        <!-- Inside the loop for rendering buttons -->
        <button id="behavior-<%= b.id %>" onclick="sendButtonPress('<%= b.id %>', '<%= b.name %>');">
          <%= b.name %>
        </button>
        <p>Count: <span id="count-<%= b.id %>">0</span></p>
      <% }); %>
    <% } else { %>
      <p>No buttons found.</p>
    <% } %>

    <script>
      function sendButtonPress(buttonId, buttonName) {
        $.ajax({
          type: "POST",
          url: "/log",
          contentType: "application/json; charset=utf-8",
          data: JSON.stringify({ id: buttonId, name: buttonName }),
          success: function (response) {
            // Handle success, e.g., update the count on the client side
            updateCount(buttonId);
          },
          error: function (error) {
            console.error(error);
          },
        });
      }
    
      function updateCount(buttonId) {
        // Update the count on the client side based on the buttonId
        const countElement = document.getElementById(`count-${buttonId}`);
        const currentCount = parseInt(countElement.textContent);
        const newCount = currentCount + 1;
        countElement.textContent = newCount;
    
        // Continue the counting
        sendButtonPress(buttonId, ''); // Pass an empty name or modify as needed
      }
    </script>
    

  </body>
</html>




