<!DOCTYPE html>
<html lang="en">
  <head>
    <title>PE Tracker</title>
    <meta charset="UTF-8">
  </head>
  <body>
    <h1>HELLO WORLD!</h1>
    <% buttons.forEach(function(b) { %>
      <button id="<%= b.id %>" onclick="send('<%= b.id %>');">
        <%= b.name %>
      </button>
    <% }); %>
    <p id="output"></p>
    <script>
      const output = document.getElementById("output");

      async function send(id) {
        const response = await fetch("/log", {
          method: "POST",
          headers: {
            "Accept": "application/json",
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            id: id,
          }),
        });
        const result = await response.json();
        if (result.error) {
          output.innerHTML = `<strong>ERROR: ${result.error.routine}`;
        } else {
          output.innerHTML = `Created button ${result.newId.new_id} at ${result.when.localtime} Refresh to view them all!`;
        }
      }
    </script>
  </body>
</html>

